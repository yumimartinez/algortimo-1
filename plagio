#include <iostream>
#include <conio.h>
#define FIL 10
#define COL 10

using namespace std;

void cargar_diagonal(int mat[FIL][COL],int n){
int i,a = 0,b = 0,c = 1;
while(b<n){
	for(i = b;i >= 0;i--){
		mat[i][a] = c;
		c++;
		a++;
		}
	b++;
	a = 0;
	}
a++;
b = n-1;
while(a<n){
	for(i = a;i < n;i++){
		mat[b][i] = c;
		c++;
		b--;
		}
	b = n-1;
	a++;
	}
}

void mostrar(int mat[FIL][COL],int n){
	int i,j;
	for(i = 0;i < n;i++){
		for(j = 0;j < n;j++){
			cout << mat[i][j] << " ";
		}
		cout << endl;
	}
}

void main (){
	int n,s=0;
	int mat[FIL][COL];
	cout << "Ingrese el tamaÃ±o de la matriz: ";
	cin >> n;
	cout << endl;
	cout << "La matriz es: " << endl;
	cargar_diagonal (mat,n);
	mostrar (mat,n);

getch();
}
